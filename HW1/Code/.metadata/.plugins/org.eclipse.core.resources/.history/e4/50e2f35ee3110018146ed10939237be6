import random

def getFilePath():
    import tkinter as tk
    from tkinter import filedialog
    global filePath
    root = tk.Tk()
    root.withdraw()
    filePath = filedialog.askdirectory()
    #print(filePath)
    return filePath

import os

getFilePath()
file = 'this.txt'
fNew =  os.path.join(filePath, file)
afile = open(fNew, "w+" )